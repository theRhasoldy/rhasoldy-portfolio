---
type Props = {
  text: string;
  isGreen: boolean;
};

const { text, isGreen } = Astro.props;
---

<span
  class:list={[
    "px-6 py-3 text-center font-serif border-2 hover:text-background duration-500",
    isGreen
      ? "border-green-500 text-green-500 hover:bg-green-500"
      : "border-secondary hover:bg-secondary text-secondary",
  ]}
>
  {text}
</span>
